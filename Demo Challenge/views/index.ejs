<%- include('./components/header') %>
<%- include('./components/main_title.ejs') %>

<label class="label-l">Add New Post</label><br>
<%- include('./components/feedForm.ejs') %>

<div id="container">
        <% if(data.length > 0) { %>
                <% data.forEach(post => { %>
                    <div>
                        <h2><%= post.name %></h2>
                        <p><a href=/feed/<%= post.id %>>see more</a></p>
                        <p><%= post.createdAt.getDate() %>/<%= post.createdAt.getMonth() + 1 %>/<%= post.createdAt.getFullYear() %></p>
                        <h3><%= post.message %></h3>
                    </div>
        <% }) } else { %>
                <h3>There are no Posts to display</h3>
        <% } %>
    
</div>


<%- include('./components/footer.ejs') %>